{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>AccountId</th>
                <th>_self</th>
                <th>AccountType</th>
                <th>EmailAddress</th>
                <th>DisplayName</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.accountId }}</td>
                <td>{{ user.self }}</td>
                <td>{{ user.accountType }}</td>
                <td>{{ user.emailAddress }}</td>
                <td>{{ user.displayName }}</td>
                <td>{{ user.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'accountId': user.accountId}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'accountId': user.accountId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
